<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="themeBackgroundColor">@color/colorLightBackground</item>
        <item name="themeTextColor">@color/colorLightText</item>
        <item name="themeTabBackgroundColor">@color/colorPrimary</item>
        <item name="themeSoftTextColor">@color/colorSoftText</item>
        <item name="themeStatusBarColor">@color/statusBarLight</item>
        <item name="themeDialogTextColor">@color/colorPrimary</item>
        <item name="colorOnSurface">@color/colorDarkBackground</item>
        <item name = "actionMenuTextColor">@color/colorDarkText</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <style name="AppTheme.Picker" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="android:textColorPrimary">@android:color/black</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>


</resources>
